; SECTION Test equality

(define test-equals ()
  (and (= 3 3)
  (and (= 3000 3000)
  (and (= "abc" "abc")
  (and (= #t #t)
  (and (= #f #f)
       (= 3.0 3.0)))))))

; SECTION Test reference equality

(define test-equals ()
  (let (a 3 b 3000 c "abc" d #t e #f f 3.0)
    (and (=== a a)
    (and (=== b b)
    (and (=== c c)
    (and (=== d d)
    (and (=== e e)
         (=== f f))))))))



