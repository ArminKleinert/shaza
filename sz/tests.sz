; SECTION Test binary and

(define test-bin-and ()
  (and (= (& 3 1) 1)
  (and (= (& 3 3) 3)
  (and (= (& 3 0) 0)
       (= (& #t 1) 1)))))

(define test-bin-and-2 ()
  (= (bin-and 3 1) (& 3 1)))

; SECTION Test binary or

(define test-bin-or ()
  (and (= (| 3 1) 3)
  (and (= (| 3 3) 3)
  (and (= (| 3 0) 3)
       (= (| #t 1) 1)))))

(define test-bin-and-2 ()
  (= (bin-or 3 1) (| 3 1)))

; SECTION Test binary xor

(define test-bin-xor ()
  (and (= (^ 3 1) 2)
  (and (= (^ 3 3) 0)
  (and (= (^ 3 0) 3)
       (= (^ #t 1) 0)))))

(define test-bin-xor-2 ()
  (= (bin-xor 33 3) (^ 33 3)))

